{
  "name": "react-starter-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "coverage": "cross-env NODE_ICU_DATA=node_modules/full-icu react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint './src/**/*.{ts,tsx}' && stylelint './src/**/*.{css,pcss,scss}'",
    "lint:fix": "eslint --fix './src/**/*.{ts,tsx}' && stylelint --fix './src/**/*.{css,pcss,scss}'",
    "start": "react-scripts start",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu react-scripts test",
    "cypress:open": "cd e2e && ./node_modules/.bin/cypress open; cd ..",
    "cypress:run": "cd e2e && ./node_modules/.bin/cypress run && cd ..",
    "serve": "./node_modules/.bin/http-server ./build --port 1337",
    "cypress:wait-and-run": "./node_modules/.bin/wait-on http://localhost:1337/ && npm run cypress:run",
    "cypress:e2e": "npm run build && npm-run-all -p -r serve cypress:wait-and-run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{css,pcss,scss}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.4.0",
    "@testing-library/react-hooks": "3.2.1",
    "@testing-library/user-event": "7.2.1",
    "@types/jest": "24.9.0",
    "@types/node": "12.12.24",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-router-dom": "5.1.3",
    "clsx": "1.0.4",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-intl": "3.11.0",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.3.0",
    "react-test-renderer": "16.12.0",
    "typescript": "3.7.5"
  },
  "devDependencies": {
    "cross-env": "6.0.3",
    "eslint-config-prettier": "6.9.0",
    "eslint-plugin-prettier": "3.1.2",
    "full-icu": "1.3.0",
    "http-server": "0.12.1",
    "husky": "4.0.10",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1",
    "serve": "11.3.0",
    "stylelint": "13.0.0",
    "stylelint-config-recommended": "3.0.0",
    "wait-on": "4.0.0"
  }
}
